@model WEB_ProyectoFinal_Grupo3.Models.CategoriaPaqueteViewModel

@{
    ViewData["Title"] = "Home Page";
}
@if (Model.Categorias.Any())
{
    <section id="Carrousel">
        <div class="container-fluid">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @foreach (var item in Model.Categorias)
                    {
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@item.Id" class="@(@item.Id == Model.Categorias.First().Id ? "active" : "")" aria-current="@(@item.Id == Model.Categorias.First().Id ? "true" : "false")" aria-label="Slide @item.Id"></button>
                    }
                </div>

                <div class="carousel-inner">
                    @foreach (var item in Model.Categorias)
                    {
                        <div class="carousel-item @(item.Id == Model.Categorias.First().Id ? "active" : "")">
                            <img src="@item.ImagenCategoriaPath" class="d-block w-100" alt="@item.Nombre">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.Nombre</h5>
                                <p>@item.Descripcion</p>
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
}
else
{
    <div class="container">
        <div class="alert alert-warning" role="alert">
            No hay categorías disponibles.
        </div>
    </div>
}









