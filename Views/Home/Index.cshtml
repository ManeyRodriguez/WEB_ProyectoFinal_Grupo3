<!-- Paquetes de Recreación - Aventura -->


@if (Model.Paquetes.Any())
{
        <div id="Paquetes" class="card pt-1">
            <div class="card-header text-center">
            <h4 class="text-black"><i class="bi bi-tags d-inline-block"></i> Paquetes</h4>
        </div>

        <div class="row">
            @foreach (var paquete in Model.Paquetes)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <strong class="text-muted">Categoria: @paquete.Categoria.Nombre</strong>

                            @if (!string.IsNullOrEmpty(paquete.ImagenPaquetePath))
                            {
                                <img src="@paquete.ImagenPaquetePath" alt="Imagen" class="img-thumbnail" style="max-width: 150px;">

                            }
                            else
                            {
                                <span class="mr-2"><i class="bi bi-image"></i></span>
                            }

                            <h5 class="card-title mt-3">@paquete.Nombre</h5>

                            @{
                                var duracionText = paquete.Duracion > 60 ? (paquete.Duracion / 60 == 1 ? "1 hora" : $"{paquete.Duracion / 60} horas") : $"{paquete.Duracion} minutos";
                            }
                            <small class="text-muted"> Duración: <i class="bi bi-clock"></i> @duracionText</small>

                            <strong class="text-muted"> Costo: RD$@Html.DisplayFor(model => paquete.Costo)</strong>
                            
                            <strong class="text-justify text-dark">@paquete.Descripcion</strong>


                            <a href="@Url.Action("Details", "Paquetes", new { id = paquete.Id })" class="btn btn-primary mt-3"><i class="bi bi-eye"></i> Ver Detalles</a>
                    
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
}


