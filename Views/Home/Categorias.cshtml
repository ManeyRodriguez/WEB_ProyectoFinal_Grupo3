@model IEnumerable<WEB_ProyectoFinal_Grupo3.Models.Categoria>

@{
    ViewData["Title"] = "Paquetes";
}
@{
    @if (Model.Any())
    {
        <div id="Categorías" class="card pt-1">
            <div class="card-header text-center">
                <h4 class="text-black"><i class="bi bi-tags d-inline-block"></i> Categorías</h4>
            </div>

            <div class="row">
                @foreach (var categoria in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="@categoria.ImagenCategoriaPath" class="card-img-top" alt="@categoria.Nombre">
                            <div class="card-body">
                                <h5 class="card-title">@categoria.Nombre</h5>
                                <p class="card-text">@categoria.Descripcion</p>
                                <div class="text-center">
                                    <a href="@Url.Action("Details", "Categorias", new { id = categoria.Id })" class="btn btn-primary mt-3"><i class="bi bi-eye"></i> Comprar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}
