@model WEB_ProyectoFinal_Grupo3.Models.Paquete

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="card">

    <partial name="_MensajesPartial" />
    <div class="card-body">
        <h4 class="card-title">Editar Paquete</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Estado" />
                  

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Costo" class="control-label">Costo</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">RD$</span>
                            </div>
                            <input asp-for="Costo" class="form-control" />
                        </div>
                        <span asp-validation-for="Costo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Duracion" class="control-label">Duración</label>
                        <input asp-for="Duracion" class="form-control" />
                        <span asp-validation-for="Duracion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImagenPaquetePath" class="control-label">Imagen Actual</label>
                        @if (!string.IsNullOrEmpty(Model.ImagenPaquetePath))
                        {
                            <img src="@Model.ImagenPaquetePath" class="img-thumbnail" alt="Imagen del paquete" />
                        }
                        else
                        {
                            <div class="alert alert-warning" role="alert">
                                No hay imagen disponible para este paquete.
                            </div>
                        }
                        <input type="hidden" asp-for="ImagenPaquetePath" />
                    </div>



                    <div class="form-group">
                        <label asp-for="ImagenArchivo" class="control-label">Nueva Imagen:</label>
                        <div class="custom-file">
                            <input asp-for="ImagenArchivo" type="file" class="custom-file-input" id="customFile1" accept=".jpg,.jpeg,.png">
                            <label class="custom-file-label" for="customFile">Seleccionar Archivo</label>
                        </div>
                        <span asp-validation-for="ImagenArchivo" class="text-danger" style="font-size: 12px; display: block;"></span>
                    </div>

          

                    <div class="form-group">
                        <label asp-for="IdCategoria" class="control-label">Categoría</label>
                        <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
