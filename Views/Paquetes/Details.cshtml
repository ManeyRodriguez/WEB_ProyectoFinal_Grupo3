@model WEB_ProyectoFinal_Grupo3.Models.Paquete

@{
    ViewData["Title"] = "Details";
}



<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <!-- Aquí va la imagen del paquete -->
            @if (!string.IsNullOrEmpty(Model.ImagenPaquetePath))
            {
                <img src="@Model.ImagenPaquetePath" class="img-fluid rounded-start" alt="Imagen del paquete">
            }
            else
            {
                <span>No disponible</span>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                <p class="card-text">Costo: RD$ @Html.DisplayFor(model => model.Costo)</p>
                <p class="card-text">Duración: @Html.DisplayFor(model => model.Duracion) minutos</p>
            </div>
        </div>
    </div>
</div>


<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
