@model WEB_ProyectoFinal_Grupo3.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="container d-flex justify-content-center">
    <div class="card mb-3 mt-2" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <!-- Aquí va la imagen de la categoría -->
                <img src="@Model.ImagenCategoriaPath" class="img-fluid rounded-start" alt="Imagen de la categoría">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2 mt-2">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fas fa-edit"></i> Editar</a>
                <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
            </div>
        </div>
    </div>

    
</div>



